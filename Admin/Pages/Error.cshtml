@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}
 <style>
        /* Full-page container */
        .container {
            width: 100%;
            height: 100vh; /* Use viewport height for full screen */
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        /* Error image */
        .error-image {
            max-width: 100%;
            max-height: 80%; /* Adjust as needed */
        }

        /* Refresh button */
        .refresh-button {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
<body>
    <div class="container">
        <img src="~/images/something_went_wrong.png" alt="Error Image" class="error-image">
        <button class="refresh-button" onclick="refreshPage()">Refresh Page</button>
    </div>

    <script>
        function refreshPage() {
            window.location.href = '/Login';
        }
    </script>
</body>