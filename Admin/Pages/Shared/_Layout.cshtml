<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/css/adminLayout.css" asp-append-version="true" />


    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

</head>
<body>
    <div class="container">
        <aside>
            <div class="top">
                <div class="logo">
                    <img src="">
                    <h2><span class="danger">Art</span>Hub</h2>
                </div>
                <div class="close" id="close-btn">
                    <i class='bx bxs-right-arrow'></i>
                </div>

            </div>
            <div class="sidebar">
                <a href="#">
                    <i class='bx bx-home icon'></i>
                    <h3 class="text nav-text">Dashboard</h3>
                </a>
                <a href="#" class="active">
                    <i class='bx bx-palette icon'></i>
                    <h3 class="text nav-text">Top Artwork</h3>
                </a>
                <a href="#">
                    <i class='bx bx-heart icon'></i>
                    <h3 class="text nav-text">Top Creator</h3>
                </a>
                <a href="#">
                    <i class='bx bx-bar-chart icon'></i>
                    <h3 class="text nav-text">Platform Setting</h3>
                </a>
            </div>
        </aside>
   
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    

  </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>