@page
@model User.Pages.CreatorExploration.IndexModel
@{
    ViewData["Titel"] = "ArtHub's Creators";
}
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
        }

        .profile-card {
            background-color: #6C63FF;
            color: #FFFFFF;
            height: 320px;
            background-size: cover;
            background-position: top center;
            display: flex;
            flex-direction: column;
            justify-content: end;
        }

        .profile-card img {
            height: 252px;
            object-fit: cover;
            object-position: center;
        }
        .banner {
            background: linear-gradient(to right, #a18cd1 0%, #fbc2eb 100%);
            text-align: center;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 1.2rem;
        }
    </style>
</head>
<div class="banner">
    <h1 class="text-4xl font-semibold text-center text-gray-800">ArtHub's Creators</h1>
</div>
<section class="container mx-auto px-6 py-8" style="width: 80%; padding-top: 20px;">
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        @for (int i = 0; i < 12; i++)
        {
            <div class="profile-card rounded-lg overflow-hidden"
             style="background-image: url('https://images.unsplash.com/photo-1564564321837-a57b7070ac4f?q=80&w=1776&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')">
                <div class="p-4" style="background: linear-gradient(to bottom, transparent, #6C63FF);">
                    <h2 class="text-lg font-semibold">Helen Tra</h2>
                    <p class="text-sm">Digital Artist</p>
                    <p class="text-xs">helen.tra | subscribers: 1.2k</p>
                    <button class="mt-3 w-full btn btn-dark">Subscribe</button>
                </div>
            </div>
        }
    </div>
</section>